    "def solution(num):\n",
    "    counts = 500\n",
    "    if num == 1: return 0\n",
    "    for count in range(1, counts + 1):\n",
    "        num = num * 3 + 1 if num % 2 else num // 2\n",
    "        if num == 1:\n",
    "            return count\n",
    "    return -1"
   ]
